<div class="container" style="margin-top: 75px" ng-controller="createGameController">
       <div  class="col-sm-8 col-sm-offset-2">
          <form ng-submit="create()" name="upload_form">
              <div class="form-group">
                  <label>Game Title</label>
                  <input type="text" required ng-model="game.title" placeholder="Enter game name" class="form-control">
              </div>
              <div class="form-group" ng-repeat="key in game.participants">
                  <label>Email of participant {{$index + 1}}</label>
                  <input type="email" required ng-model="game.participants[$index].email" placeholder="Enter email of participant {{$index + 1}}" class="form-control">
              </div>
              <div class="form-group">
                <a class="btn btn-success btn-lg col-md-offset-1" ng-click="addParticipant(game.participants.length)" ng-if="game.participants.length < 3">Add another participant</a>
                <button class="btn btn-success btn-lg col-md-offset-1" type="submit" ng-if="game.participants.length >=1 && game.participants.length <=3">Create</button>
              </div>
              
          </form>
      </div>
</div>    